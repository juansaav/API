datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id                      Int               @id
  adult                   Boolean?
  backdrop_path           String?
  original_language       String?
  original_title          String?
  overview                String?
  popularity              Float?
  poster_path             String?
  release_date            String?
  title                   String?
  video                   Boolean?
  vote_average            Float?
  vote_count              Int?
  suggestionScoreforToday Int?
  users                   FavouriteMovies[]
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  firstname        String?
  lastname         String?
  password         String?
  salt             String?
  movies FavouriteMovies[]
}

model FavouriteMovies {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  movie     Movie    @relation(fields: [movieId], references: [id])
  movieId   Int
  createdAt DateTime @default(now())

  @@id([userId, movieId])
}

model Configuration {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
